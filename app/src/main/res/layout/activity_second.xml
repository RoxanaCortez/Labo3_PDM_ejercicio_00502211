<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padd_general"
    android:gravity="center_vertical"
    android:orientation="vertical"
    tools:context=".SecondActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_labelName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_principal"
            android:textColor="@color/color_black"
            android:text="@string/txt_username"/>

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_labelName"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/margin_principal"
            android:textColor="@color/color_black"
            android:layout_alignBaseline="@+id/tv_labelName"
            android:hint="@string/txt_vacio"/>

        <TextView
            android:id="@+id/tv_labelPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_labelName"
            android:layout_margin="@dimen/margin_principal"
            android:textColor="@color/color_black"
            android:text="@string/txt_password"/>

        <TextView
            android:id="@+id/tv_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_labelPass"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/margin_principal"
            android:textColor="@color/color_black"
            android:layout_alignBaseline="@+id/tv_labelPass"
            android:hint="@string/txt_vacio"/>

        <TextView
            android:id="@+id/tv_labelEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_labelPass"
            android:layout_margin="@dimen/margin_principal"
            android:textColor="@color/color_black"
            android:text="@string/txt_email"/>

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_labelEmail"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/margin_principal"
            android:textColor="@color/color_black"
            android:layout_alignBaseline="@+id/tv_labelEmail"
            android:hint="@string/txt_vacio"/>

        <TextView
            android:id="@+id/tv_labelGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_labelEmail"
            android:layout_margin="@dimen/margin_principal"
            android:textColor="@color/color_black"
            android:text="@string/txt_gender"/>

        <TextView
            android:id="@+id/tv_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_labelGender"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/margin_principal"
            android:textColor="@color/color_black"
            android:layout_alignBaseline="@+id/tv_labelGender"
            android:hint="@string/txt_vacio"/>
    </RelativeLayout>

    <Button
        android:id="@+id/bt_share"
        android:layout_width="@dimen/bt_ancho"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin_principal"
        android:drawableStart="@mipmap/icon"
        android:drawableLeft="@mipmap/icon"
        android:drawableTint="@color/colorAccent" />

</LinearLayout>