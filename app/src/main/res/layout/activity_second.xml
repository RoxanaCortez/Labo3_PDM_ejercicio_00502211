<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:gravity="center_vertical"
    android:orientation="vertical"
    tools:context=".SecondActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_labelName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textColor="#333"
            android:text="Username:"/>

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_labelName"
            android:layout_alignParentRight="true"
            android:layout_margin="8dp"
            android:textColor="#333"
            android:layout_alignBaseline="@+id/tv_labelName"
            android:hint=""/>

        <TextView
            android:id="@+id/tv_labelPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_labelName"
            android:layout_margin="8dp"
            android:textColor="#333"
            android:text="Password:"/>

        <TextView
            android:id="@+id/tv_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_labelPass"
            android:layout_alignParentRight="true"
            android:layout_margin="8dp"
            android:textColor="#333"
            android:layout_alignBaseline="@+id/tv_labelPass"
            android:hint=""/>

        <TextView
            android:id="@+id/tv_labelEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_labelPass"
            android:layout_margin="8dp"
            android:textColor="#333"
            android:text="Email:"/>

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_labelEmail"
            android:layout_alignParentRight="true"
            android:layout_margin="8dp"
            android:textColor="#333"
            android:layout_alignBaseline="@+id/tv_labelEmail"
            android:hint=""/>

        <TextView
            android:id="@+id/tv_labelGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_labelEmail"
            android:layout_margin="8dp"
            android:textColor="#333"
            android:text="Gender:"/>

        <TextView
            android:id="@+id/tv_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_labelGender"
            android:layout_alignParentRight="true"
            android:layout_margin="8dp"
            android:textColor="#333"
            android:layout_alignBaseline="@+id/tv_labelGender"
            android:hint=""/>
    </RelativeLayout>

    <Button
        android:id="@+id/bt_send"
        android:layout_width="49dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:drawableStart="@mipmap/icon"
        android:drawableLeft="@mipmap/icon"
        android:drawableTint="@color/colorAccent" />

</LinearLayout>